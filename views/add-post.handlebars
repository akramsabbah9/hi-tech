<section class="card">
    <h2 class="card-header">Create New Post</h2>

    <form id="new-post-form" class="card-body">
        <div>
            <label for="post-title" class="form-label">Title</label>
            <input type="text" id="post-title" name="post-title" class="form-input" autocomplete="off" />
        </div>
        <div>
            <label for="post-text" class="form-label">Content</label>
            <textarea id="post-text" name="post-text" class="form-textarea"></textarea>
        </div>
        <button type="submit" class="btn">Create</button>
    </form>
</section>

<script src="/javascript/add-post.js"></script>