<section class="card">
    <h2 class="card-header">Edit Post</h2>

    <form id="edit-post-form" class="card-body">
        <div>
            <label for="post-title" class="form-label">Title</label>
            <input type="text" id="post-title" name="post-title" value="{{post.title}}" class="form-input" />
        </div>
        <div>
            <label for="post-text" class="form-label">Content</label>
            <textarea id="post-text" name="post-text" class="form-textarea">{{post.post_text}}</textarea>
        </div>
        <button type="submit" class="btn">Update Post</button>
        <button type="button" id="delete-post-btn" class="btn">Delete</button>
    </form>
</section>

<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>