<div class="card">
    <h3 class="card-header">
        Login
    </h3>
    <form id="login-form" class="card-body">
        <div>
            <label for="user-login" class="form-label">Username</label>
            <input type="text" id="user-login" class="form-input" />
        </div>
        <div>
            <label for="password-login" class="form-label">Password</label>
            <input type="password" id="password-login" class="form-input" />
        </div>
        <div>
            <button type="submit" class="btn">Login!</button>
        </div>
        <a href="/signup" class="signup">Sign Up Instead</a>
    </form>
</div>

<script src="/javascript/login.js"></script>