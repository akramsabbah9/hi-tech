<div class="comments">
    <h2>Comments:</h2>
    {{#each this}}
    <section class="card">
        <div class="card-header">
            {{user.username}} on {{format_date createdAt}}
        </div>
        <div class="card-body">
            {{comment_text}}
        </div>
    </section>
    {{/each}}
</div>